<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="problemText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/problemText</item>
    </style>

    <style name="scoreText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/score</item>
    </style>

    <style name="buttonText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/buttonText</item>
    </style>

    <style name="correctText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/correctText</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textAppearance">@style/problemText</item>
    </style>

    <style name="button">

    </style>

</resources>
